#:kivy 1.0

<MainLayout>
	BoxLayout:
		orientation: 'vertical'
		padding: 10
		
		Label:
			id: title
			text: 'Yubaba'
			size_hint: (1, 0.08)
		
		GridLayout:
			cols: 3
			padding: 10
			
			BoxLayout:
				orientation: 'vertical'
				padding: 20
		
				Button:
					text: 'open files'
					size_hint: (1, 0.2)
					id: open_files_button
					on_press: root.open_files()
				Widget:
				
			BoxLayout:
				orientation: 'vertical'
				padding: 20
				Label:
					id: config
					text: 'config'
					size_hint: (1, 0.2)
				Widget:
		
			BoxLayout:
				orientation: 'vertical'
				padding: 20
				Label:
					id: output
					text: 'output'
					size_hint: (1, 0.2)
				Widget:
