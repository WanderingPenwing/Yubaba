<FileLabel>:
    halign: 'left'  # Supposed to align the text to the left
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<FileList>:
    viewclass: 'FileLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<MainLayout>
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        
        Label:
            id: title
            text: 'Yubaba'
            size_hint: (1, 0.08)
        
        GridLayout:
            cols: 2
            padding: 10
            
            BoxLayout:
                orientation: 'vertical'
                padding: 20
        		
        		BoxLayout:
                	orientation: 'horizontal'
                	padding: 20
                	size_hint: (1, 0.1)

                	Button:
	                    text: 'open files'
	                    id: open_files_button
	                    on_press: root.open_files()

	                Button:
	                    text: 'remove selected'
	                    id: open_files_button
	                    on_press: root.remove_selected()
                
                Label:
                    text: 'Files to convert:'
                    size_hint_y: None
                    height: self.texture_size[1]

                FileList:
                	id: file_list

            BoxLayout:
                orientation: 'vertical'
                padding: 20
                Label:
                    id: config
                    text: 'config'
                    size_hint: (1, 0.2)
                Widget: