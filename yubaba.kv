<MyApp>:
    icon: 'images\Logo.ico'

<FileLabel>:
    halign: 'left'  # Alignement du texte à gauche
    # Dessine un fond pour indiquer la sélection
    canvas.before:
        Color:
            rgba: (0.9, 0.1, .1, .3) if self.selected else (0.2, 0.2, 0.2, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<FileList>:
    viewclass: 'FileLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<MainLayout>:
    canvas.before:
        Color:
            rgba: 0.25, 0.25, 0.25, 1
        Rectangle:
            pos: self.pos
            size: self.size
        
    GridLayout:
        cols: 2
        padding: 20
        
        BoxLayout:
            orientation: 'vertical'
            padding: 20
    		
    		BoxLayout:
            	orientation: 'horizontal'
            	padding: 20
            	size_hint: (1, 0.2)

            	Button:
                    text: 'Ouvrir des fichiers'
                    id: open_files_button
                    on_press: root.open_files()

                Button:
                    text: 'Supprimer la sélection'
                    id: remove_selected
                    on_press: root.remove_selected()
            
            Label:
                text: 'Fichiers à convertir:'
                size_hint_y: None
                height: self.texture_size[1] * 2

            FileList:
            	id: file_list

            
            Label:
                text: 'A convertir au format :'
                size_hint_y: None
                height: self.texture_size[1] * 2

            MultiSelectDropDown:
                id: format_dropdown
                options: ['PNG', 'JPG', 'GIF', 'BMP']  # Exemple de types de format d'image
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            
            BoxLayout:
                orientation: 'horizontal'
                padding: 20
                size_hint: (1, 0.2)

                Button:
                    text: root.output_folder
                    id: output_folder_button
                    on_press: root.open_folder()
            Widget: